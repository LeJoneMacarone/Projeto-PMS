<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs", {title: "Report Info" }); %>

    <body>
        <%- include("./partials/nav_bar.ejs"); %>
            <div class="container py-5">
                <!-- Go Back Button -->
                <a href="#" class="btn btn-outline-dark mb-4">
                    <span>&larr;</span> Go Back
                </a>
                <!-- Title and Button in the Same Row Above the Box -->
                <div class="d-flex justify-content-between align-items-center mb-2"
                    style="max-width: 700px; margin: 0 auto;">
                    <h1>Report</h1>
                    <button type="submit" class="btn"
                        style="width: 150px; padding: 6px 12px; border-radius: 50px; background-color: #3d704d; color: white; border: none; transition: background-color 0.3s ease;"
                        onmouseover="this.style.backgroundColor='#2e5239';"
                        onmouseout="this.style.backgroundColor='#3d704d';">Hide Campaign</button>
                </div>
                <!-- Report Details -->
                <div class="p-4 shadow-sm"
                    style="max-width: 700px; margin: 0 auto; background-color: #d6e8d6; border-radius: 30px;">
                    <ul class="list-unstyled mb-0">
                        <% if (report.campaign) { %> <!-- TODO remove this and '}' when creating report is done-->
                        <li class="mb-2"><b>→ Title:</b> <%= report.campaign.title %></li>
                        <li class="mb-2"><b>→ Creator:</b><%= report.campaign.creator.username %></li>
                        <% } %>
                        <li class="mb-2"><b>→ Reported by:</b> <%= report.reporter.username %></li>
                        <li><b>→ Reasons:</b> <%= report.description %></li>
                    </ul>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>

</html>