<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs", {title: "Login"});  %>
<body>
    <%- include("./partials/nav_bar.ejs"); %>
        <!-- Container where is gonna go the login form -->
        <div>
            <!-- Login title -->
            <h3>Login</h3>
            <form action="" method="POST">
                <!-- Username and password inputs -->
                <div>
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="Enter username">
                </div>

                <p>Password</p>
                <input type="password" name="password">
                <!-- Forgot password link -->
                <a href="login_forgot_password.ejs">Forgotten your password?</a>
                <!-- Login button -->
                <button type="submit">Login</button>
            </form>
            <!-- Register link -->
            <a href="register.ejs">Create account</a>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
